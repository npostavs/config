[core]
	attributesfile = "~/.config/git/attributes"
[color]
	ui = auto
[user]
	email = npostavs@users.sourceforge.net
	name = Noam Postavsky\n
	signingkey = npostavs
[alias]
	co = checkout
	ci = commit
	graph = log --oneline --graph --decorate
	hub = !~/.config/git/github-fetch.sh
	pr = !~/.config/git/pr.sh
[push]
	default = simple
[rerere]
	enabled = true
[merge]
	conflictstyle = diff3
	branchdesc = true
[gc]
	# default is 60 days, but better not to throw out human work too
	# quickly
	rerereresolved = 1 year
[diff]
	mnemonicprefix = true
[diff "lisp"]
	# lisp diff headers should lines starting with parens
	xfuncname = "^\\(.*$"
[diff "org"]
	# org headers start with stars
	xfuncname = "^ *[*]+.*$"
